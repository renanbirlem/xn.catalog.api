{
    "name": "xn.catalog.api",
    "version": "1.1.0",
    "main": "./src/main.mjs",
    "scripts": {
        "dev": "DEBUG=app* nodemon --experimental-modules ./src/main.mjs",
        "start": "node --experimental-modules ./src/main.mjs",
        "clean": "rm -rf build",
        "build": "babel ./src -d ./build",
        "build-watch": "babel --watch ./src -d ./build",
        "deploy": "sls deploy --stage dev",
        "publish": "npm run clean && npm run build && npm run deploy",
        "offline": "npm run clean && npm run build-watch & sls offline start",
        "test": "jest --watchAll"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "dotenv": "^6.2.0",
        "express": "^4.16.3",
        "helmet": "^3.15.0",
        "mockingoose": "^2.11.0",
        "mongoose": "^5.3.15",
        "morgan": "^1.9.1",
        "redis": "^2.8.0",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.0",
        "@babel/core": "^7.2.2",
        "@babel/preset-env": "^7.2.0",
        "babel-jest": "^23.6.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
        "eslint": "^5.6.0",
        "eslint-plugin-jest": "^21.27.2",
        "jest": "^23.6.0",
        "nodemon": "^1.18.7",
        "prettier": "^1.14.3",
        "serverless-offline": "^3.31.3",
        "supertest": "^3.3.0"
    },
    "engines": {
        "node": "^10.x.x",
        "npm": "6.2.x"
    },
    "jest": {
        "testMatch": [
            "**/__tests__/**/*.?(m)js?(x)",
            "**/(*.)(spec|test).?(m)js?(x)"
        ],
        "moduleFileExtensions": ["js", "json", "jsx", "node", "mjs"],
        "transform": {
            "^.+m?js$": "babel-jest"
        },
        "collectCoverage": true,
        "coverageReporters": ["html"]
    },
    "babel": {
        "presets": ["@babel/preset-env"],
        "env": {
            "test": {
                "plugins": [
                    [
                        "transform-es2015-modules-commonjs",
                        {
                            "spec": true
                        }
                    ]
                ]
            }
        }
    }
}
